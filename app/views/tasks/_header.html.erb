<!-- タスク一覧のヘッダー部分 -->
<div class="mb-8" id="tasks_header">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between">
    <div class="mb-4 md:mb-0">
      <h1 class="text-2xl md:text-3xl font-bold text-primary">
        <i class="fas fa-tasks mr-2"></i>タスク管理
      </h1>
      <p class="text-gray-600 mt-1">
        <i class="fas fa-user mr-1"></i><%= current_user.email %>
      </p>
    </div>

    <div class="flex items-center space-x-2 text-sm text-gray-500">
      <span><i class="fas fa-calendar-day mr-1"></i><%= Time.current.strftime("%Y年%m月%d日") %></span>
      <span class="mx-2">|</span>
      <span><i class="fas fa-list-check mr-1"></i>タスク数: <%= tasks.count %></span>
      <% if tasks.in_progress.exists? %>
        <span class="mx-2">|</span>
        <span class="text-accent">
          <i class="fas fa-play-circle mr-1"></i>実行中: <%= tasks.in_progress.count %>
        </span>
      <% end %>
    </div>
  </div>
</div>
